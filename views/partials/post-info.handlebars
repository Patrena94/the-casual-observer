<article class="post">
  <div class="card">
  <div class="card-header">
       <p>{{title}}
      <a href="{{post_url}}" target="_blank"><Posted by:{{user_}}</a><span>({{format_url post_url}})</span></p>
  </div>

  <div class="card-body">
  {{#each comments}}
    {{!-- <h5 class="card-text">{{comment_text}}</h5> --}}
       <p>{{comment_text}}</p>
  {{/each}}
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>.</p>
  </div>
</div>
</article>
