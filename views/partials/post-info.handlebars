<article class="post">
  <div class="card">
  <div class="card-header">
       <p>{{title}} &emsp14; by you on {{format_date post.created_at}}
      <a href="{{post_url}}" target="_blank"><Posted by:{{user_}}</a><span>({{format_url post_url}})</span></p>
  </div>

  <div class="card-body">
  {{#each comments}}
       <p>{{comment_text}}</p>
  {{/each}}
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>.</p>
  </div>
</div>
</article>
